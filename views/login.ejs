<h1>Login</h1>
<% if(messages.error){ %>
  <%= messages.error %>
    <% } %>
      <form action="/login" method="post">

        <div>
          Email <input type="text" name="email" id="email" required>
        </div>
        <div>
          Password <input type="password" name="password" id="password" required>
        </div>
        <button type="submit">Login</button>
      </form>

      <a href="/register">Register</a>